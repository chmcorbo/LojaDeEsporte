@model LojaDeEsporte.Domain.Model.Entities.CarrinhoDeCompra

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <fieldset>
        <legend>CarrinhoDeCompra</legend>
    </fieldset>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItensDoCarrinho.FirstOrDefault().Produto.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItensDoCarrinho.FirstOrDefault().Quantidade)
            </th>
            <th>
                @Html.DisplayName("Valor Total do Item")
            </th>
            <th></th>
        </tr>
    
        @foreach (var item in Model.ItensDoCarrinho) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @item.ValorTotal()
                </td>
            </tr>
        }
    </table>
    <div>
        <p>Valor Total do Pedido: </p>@Model.ValorTotal()
    </div>
    <p>        
        @Html.ActionLink("Continuar Comprando", "Index", "Produto")
    </p>
</body>
</html>
